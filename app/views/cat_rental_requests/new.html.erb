<header>
  <h1>Create a New Cat Rental Request</h1>
</header>

<body>
  <form action="<%= cat_rental_requests_url %>" method="post">
    <label for="cat_rental_request[cat_id]">Cat</label>

    <select name="cat_rental_request[cat_id]">
      <option disabled selected="selected">--Choose Cat--</option>

      <% @cats.each do |cat| %>
        <option value="<%= cat.id %>"> <%= cat.name %> </option>
      <% end %>
    </select>
    <br>

    <label for="cat_rental_request[start_date]">Start Date</label>
    <input type="date" name="cat_rental_request[start_date]">
    <br>

    <label for="cat_rental_request[end_date]">End Date</label>
    <input type="date" name="cat_rental_request[end_date]">
    <br>

    <input type="submit" value="Request Rental">
  </form>
</body>
