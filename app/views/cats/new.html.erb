<header>
  <h1>Create a New Cat</h1>
</header>

<body>
  <form action= "<%= cats_url %>" method="post">
    <!-- <input type="hidden" name="_method" value="PATCH"> -->

    <label for="cat[name]">Name</label>
    <input type="text" name="cat[name]">
    <br>

    <input type="radio" name="cat[sex]" value="M">M
    <input type="radio" name="cat[sex]" value="F">F
    <br>

    <label for="cat[color]">Color</label>
    <select name="cat[color]">
      <option disabled selected="selected">Choose one</option>
      <option value="black">Black</option>
      <option value="purple">Purple</option>
      <option value="marmalade">Marmalade</option>
      <option value="tortoishell">Tortoishell</option>
      <option value="tabby">Tabby</option>
      <option value="white">White</option>
      <option value="grey">Grey</option>
    </select>
    <br>

    <label for="cat[birth_date]">Birth Date</label>
    <input type="date" name="cat[birth_date]">
    <br>

    <label for="cat[description]">Description</label>
    <textarea name="cat[description]"></textarea>
    <br>

    <input type="submit" value="Create Cat">
  </form>
</body>
