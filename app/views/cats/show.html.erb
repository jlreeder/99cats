<header>
  <h1>Cat</h1>
</header>

<body>
  <table>
    <tr>
      <th>Birthday</th>
      <th>Age</th>
      <th>Color</th>
      <th>Name</th>
      <th>Sex</th>
      <th>Description</th>
    </tr>

    <tr>
      <td> <%= @cat.birth_date %> </td>
      <td> <%= @cat.age %> </td>
      <td> <%= @cat.color %> </td>
      <td> <%= @cat.name %> </td>
      <td> <%= @cat.sex %> </td>
      <td> <%= @cat.description %> </td>
    </tr>
  </table>

  <h2>Rental Requests</h2>

  <table>
    <tr>
      <th>Start Date</th>
      <th>End Date</th>
      <th>Status</th>
    </tr>

    <% @cat.cat_rental_requests.sort_by(&:start_date).each do |request| %>
      <tr>
        <td> <%= request.start_date %> </td>
        <td> <%= request.end_date %> </td>
        <td> <%= request.status %> </td>
      <tr>
    <% end %>
  </table>
</body>
