<% if action == :edit %>
  <% action_url = cat_url(cat)%>
<% else %>
  <% action_url = cats_url %>
<% end %>

<form action= "<%= action_url %>" method="post">
  <% if action == :edit %>
    <input type="hidden" name="_method" value="PATCH">
  <% end %>

  <label for="cat[name]">Name</label>
  <input type="text" name="cat[name]" value="<%= @cat.name %>">
  <br>

  <input type="radio" name="cat[sex]" value="M" <%= @cat.sex == "M" ? "checked" : "" %> >M
  <input type="radio" name="cat[sex]" value="F" <%= @cat.sex == "F" ? "checked" : "" %> >F
  <br>

  <label for="cat[color]">Color</label>
  <select name="cat[color]">
    <option disabled <%= @cat.color ? "" : "selected" %>>Choose one</option>
    <option value="black" <%= @cat.color == "black" ? "selected" : "" %> >Black</option>
    <option value="purple" <%= @cat.color == "purple" ? "selected" : "" %> >Purple</option>
    <option value="marmalade" <%= @cat.color == "marmalade" ? "selected" : "" %> >Marmalade</option>
    <option value="tortoishell" <%= @cat.color == "tortoishell" ? "selected" : "" %> >Tortoishell</option>
    <option value="tabby" <%= @cat.color == "tabby" ? "selected" : "" %> >Tabby</option>
    <option value="white" <%= @cat.color == "white" ? "selected" : "" %> >White</option>
    <option value="grey" <%= @cat.color == "grey" ? "selected" : "" %> >Grey</option>
  </select>
  <br>

  <label for="cat[birth_date]">Birth Date</label>
  <input type="date" name="cat[birth_date]" value="<%= @cat.birth_date %>">
  <br>

  <label for="cat[description]">Description</label>
  <textarea name="cat[description]"><%= @cat.description %></textarea>
  <br>

  <input type="submit" value="<%= action == :edit ? "Update Cat" : "Create Cat" %>">
</form>
